<% include ../partials/header.ejs %>


<div class="container">
    <div class="row">
            <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST"> <!--< We define the campground_id -->
            <!--instead of campground._id to simplify so we don't have have to findById the comment because we will only use the id property.-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
                <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

